<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center|right|bottom"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="60dp" />
    <TableRow
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            android:text="C"
            android:textSize="35dp"
            app:backgroundTint="#454444"></Button>
        <Button
            android:id="@+id/btnMC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MC"
            android:textSize="30dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
        <Button
            android:id="@+id/btnMR"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MR"
            android:textSize="30dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
        <Button
            android:id="@+id/btnM"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="M+"
            android:textSize="30dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="2"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnX"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444"
            app:icon="@mipmap/ic_launcher"
            android:iconGravity="textStart"
            android:iconPadding="8dp"
            android:iconSize="40dp"></Button>
        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="±"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
        <Button
            android:id="@+id/btnPercent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="%"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
        <Button
            android:id="@+id/btnDivision"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="÷"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="2"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="×"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="2"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="2"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button

            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></Button>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#454444">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="2"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:text="0"
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424">

        </Button>

        <ButtonVi
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#252424"></ButtonVi>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="35dp"
            android:insetLeft="6dp"
            android:insetRight="6dp"
            android:insetBottom="6dp"
            app:backgroundTint="#FF9800"></Button>

    </TableRow>

</TableLayout>